<div type="edition" xml:lang="tam-Latn" rendition="class:tamil maturity:83215">
	
	<!--fill gaps comparing pallava 505-508-->
         	
	<ab xml:lang="san-Latn" rendition="class:grantha maturity:83215">
		<lb n="1"/>svasti śrī
	</ab>
	
	<p>
		
		<lb n="2"/>kampa-va<hi rend="grantha"><unclear>r</unclear>mma</hi>ṟku
		<lb n="3"/>yāṇṭu patiṉ
		<lb n="4"/>Eṭṭāvatu
	</p>
	<p>
		maṉai<unclear>yiṟ</unclear>
		<lb n="5" break="no"/>-kōṭṭattu maṉai<unclear>yi</unclear>
		<lb n="6" break="no"/><gap reason="lost" quantity="5" unit="character"/> ṇṭaṅ kiḻavarkaḷil ra
		<lb n="7" break="no"/><gap reason="lost" quantity="5" unit="character"/> l ciyacarmaṉ <hi rend="grantha">brāhma</hi>ṇi
		<lb n="8"/>naṅkai-p perumāṉ
		<lb n="9"/>tiru-v-iḻiccil <hi rend="grantha">subra</hi>
		<lb n="10" break="no"/><hi rend="grantha">hmaṇya-bha</hi>ṭāra<reg>r</reg>kku nantā-viḷa
		<lb n="11" break="no"/>kkukku kuṭutta poṉ pattu
	</p>
	<p>
		I
		<lb n="12" break="no"/>p-poṉṉālum vanta Aṟu-patiṉā
		<lb n="13" break="no"/>ḻi Eṇṇaiyum Āṭṭā
		<lb n="14" break="no"/>ṇṭu tōṟum tiru-viḷakku
		<lb n="15"/>muṭṭāmai-y Eriya <gap reason="lost" quantity="10" unit="character"/> vai
		<lb n="16" break="no"/>ppōm āṉōm <hi rend="grantha">sa</hi>paiyōm
	</p>
		
