            <div type="edition" xml:lang="san-Latn" rendition="class:grantha maturity:vernacular">
                
                <pb n="1r"/>
                
                <ab>
                    <pb n="1v"/>
                    <lb n="1v1=1"/>svasti śrī
                </ab>
                
                
                <lg n="1" met="mandākrāntā">
                    <l n="a">lokotpatti-sthiti-laya-vidher īśate yasya līlā</l> 
                    <l n="b"><unclear>yatrāyatya</unclear> parama<lb n="1v2=2" break="no"/>-madhuraṃ śarma-lo<choice><orig>g</orig><reg>k</reg></choice>eśvarāś ca</l>
                    <l n="c">du<unclear>r</unclear>vijñātaś carati mahimā yasya vedho-ha<lb n="1v3=3" break="no"/>ribhyān</l>
                    <l n="d">tad vaḥ pāyād amalam atulan dhāma candrārdha-mauleḥ <g type="gomutraFinal">.</g></l>
                </lg>
                
                <p>
                    <pb n="2r"/>
                    <lb n="2r1="/>
                    
                    <pb n="2v"/>
                    <lb n="2v1="/>
                    
                    <pb n="3r"/>
                    <lb n="3r1="/>
                    
                    <pb n="3v1"/>
                    <lb n="3v1="/>
                    
                    <pb n="4r"/>
                    <lb n="4r1="/>
                    
                    <pb n="4v"/>
                    <lb n="4v1="/> 
                    
                    <pb n="5r"/>
                    <lb n="5r1="/>...
                </p>
                
                
                <lg n="7" met="mālinī ">
                    <l n="a">sukṛtam idam ajasraṃ ra<choice><orig>t</orig><reg>k</reg></choice>ṣateti <choice><orig>t</orig><reg>k</reg></choice>ṣitīśās</l>
                    <l n="b">sakala-nṛpati-<unclear>ketu</unclear>
                        <lb n="5r6=66" break="no"/>s so 'yam āgāmino vaḥ</l>
                    <l n="c">hara-caraṇa-sarojottaṃsa-cihnena  m<choice><sic>ū</sic><corr>u</corr></choice>rdhnā</l>
                    <l n="d">mukuḷita-kara-pa<choice><sic>t</sic><corr>d</corr></choice>mo
                        <lb n="5r7=67"/>vandate nandivarmmā <g type="ddanda">.</g></l>
                </lg>
                
                <lg n="8" met="uncertain">
                    <l n="ab">kāñcīpura-kṛta-janmā s<choice><sic>t</sic><corr>th</corr></choice>apati-patir llikhitavān praśastim</l>
                    <l n="c">imāM putro vayiraḍi nāmnā<surplus>ṃ</surplus> ści<seg xml:lang="tam-Latn" rendition="class:tamil maturity:vernacular">ṟṟa</seg>ya nāmā jñayā rājñaḥ <g type="gomutraFinal">.</g></l>
                </lg>
                
                <p xml:lang="tam-Latn" rendition="class:tamil maturity:vernacular">
                    kaccippēṭṭaImaṉaccēri<!--EF: see IP121, line 69--> <hi rend="grantha">kāṣṭa</hi>kāri vayiraṭi ma
                    <lb n="5r9=69" break="no"/>kaṉ ciṟṟayaṉ eḻuttu <g type="gomutraFinal">.</g>
                </p>
                
                <pb n="5v"/>
                
                
