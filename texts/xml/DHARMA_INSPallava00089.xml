            <div type="edition">
                
                <div type="textpart" n="A" xml:lang="san-Latn" rendition="class:grantha maturity:vernacular">
                    <head xml:lang="eng">Seal</head>
                    <lb n="1"/><gap reason="lost" extent="unknown" unit="character"/>
                </div>
                
                <div type="textpart" n="B" xml:lang="san-Latn" rendition="class:grantha maturity:vernacular">
                    <head xml:lang="eng">Plates</head>
                    
                    <!--one plate lost, at least-->
                    
                    
                    <lg n="1" met="uncertain">
                        <l n="abcd"><gap reason="lost" extent="unknown" unit="character"/>
                            <pb n="1r"/>
                            <lb n="1r1=1"/>jayan datṣiṇāśāM <g type="floret">.</g></l>
                    </lg>
                    
                    <lg n="2">
                        <l n="a">bhuraṇyu-tejāḥ punar āvir āsīd</l>                        
                        <l n="b">araṇya-saṃsthāpita-śatru-lokaḥ</l>
                        <l n="c">śaraṇya-bhūtaś śara<lb n="1r2=2"/>ṇonmukhānāṃ</l>
                        <l n="d">hiraṇyavarmmā jagatāṃ hitāya <g type="floret">.</g>
                        </l>                        
                    </lg>
                    
                    <p>                        
                        <pb n="1r"/>                        
                        <lb n="2r1=8"/>
                    </p>
                    
                    
                    <lg n="11">
                        <l n="a" enjamb="yes">Asyājñaptirabhūtsa Eva matimāndharmmārttha
                            <lb n="17" break="no"/>kāmopadhā</l>
                        <l n="b">śuddha<unclear>śśuddha</unclear>caritrapātramamadassvāmyekabhaktivrataḥ </l>
                        <l n="c">satsāmānyadhanaśca dharmmaśara
                            <lb n="18" break="no"/>ṇassa<unclear>m</unclear>bandhiniryyantriṇaḥ<note>Read <foreign>ºniryyantraṇaḥ</foreign>.</note></l>
                        <l n="d"><note>Read <foreign>ºśādhyakṣaº</foreign>.</note>kośāddhyatṣaniyogakarmmakuśalaḥ kulyaḥ kumārāhvayaḥ <g type="floret">.</g></l>
                    </lg>
                    
                    <lg n="12">
                        <l n="a">yo
                            <lb n="19"/>goṣpadāvadhimapi pradadāti bhūmiṁ</l>
                        <l n="b">yo vā haratyagaṇayanparipākamugram</l>
                        <l n="c">Ācandratāramadhiti
                            <lb n="20" break="no"/>ṣṭhata Eva tau dvau</l>
                        <l n="d">nākaukasāñca sadanannarakañca ghoram <g type="floret">.</g></l>
                    </lg>
                    
                    <lg n="13">
                        <l n="a">dharmmaṁ śarmma kṛitammayā kṛitamimaṁ
                            <lb n="21"/><note>Read <foreign>ºdīkṣāº</foreign>.</note>sāmrājyadītṣāvrato</l>
                        <l n="b"><note >Read <foreign>rakṣatyakṣatalakṣaṇaṁ kṣitiº</foreign>.</note>ratṣatyatṣatalatṣaṇaṁ tṣititale yaḥ <note>Read <foreign>kṣūtraº</foreign>.</note>tṣatracūḷāmaṇiḥ</l>
                        <l n="c">mūrddhany atra muku
                            <pb n="2v"/>
                            <lb n="22" break="no"/>ndavandyacaraṇadvandvaṁ vihāyāpareṣv</l>
                        <l n="d">ajñātapraṇato<note>Read <foreign>ºpraṇatau vasatpeº</foreign>.</note>vasenpadayugantasyetyavocannṛipaḥ <g type="floret">.</g></l>
                    </lg>
                    
                    <lg n="14">
                        <l n="a">
                            <lb n="23"/>gāvaḥ pāvana-sarvagātraśucayaḥ kāmāya vassantu yāḥ</l>
                        <l n="b">śuddhiṁ svāmiva darśayanti hi payovyājā
                            <lb n="24" break="no"/>dduhānā<note>Read <foreign>ºhānāssvayam</foreign>.</note>svayam</l>
                        <l n="c">mānyāḥ pāntu mahīsurāśca bhavato vāgāyudhā <note>Read <foreign>ºyudhāssvargiṇāṁ</foreign>.</note>svarggiṇāṁ</l>
                        <l n="d">ye yāgepyamṛitāśi
                            <lb n="25" break="no"/>nāṁ sva<unclear>ha</unclear>viṣā santoṣamātanvate <g type="floret">.</g></l>
                    </lg>
                    
                    <lg n="15">
                        <l n="ab">paramottarakāraṇikasyākṛita kavitāsvayamvṛita
                            <lb n="26" break="no"/>varasya</l>
                        <l n="cd">
                            uttarakāraṇikākhyastanayaḥ parameśvaraḥ praśastimimām <g type="floret">.</g></l>
                    </lg>
                    
                    
                    <p xml:lang="tam-Latn" rendition="class:tamil maturity:vernacular">
                        kō-vicaiya-nanti-vikkirama
                        <lb n="2v6=27" break="no"/>...
                    </p>
                    
