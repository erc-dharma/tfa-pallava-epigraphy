<div type="edition" xml:lang="san-Latn" rendition="class:grantha maturity:83215">         	
   
    <!--check order of faces: maybe start with alpahabetical order of the birudas-->
    
    <div type="textpart" n="A">
    <head xml:lang="eng">1st pillar</head>
        
        <ab>      
            <milestone n="A1" unit="face" type="pagelike"/>
            <lb n="1"/>kāma-laḷita<unclear>ḥ</unclear>
        </ab>
        <ab>
            <lb n="2"/>kula-tilaka<unclear>ḥ</unclear>
        </ab>
        
        <ab>      
            <milestone n="A2" unit="face" type="pagelike"/>
            <lb n="3"/>guṇa-vinīta<unclear>ḥ</unclear>
        </ab>
        <ab>
            <lb n="4"/>dharaṇi-tilaka<unclear>ḥ</unclear>
        </ab>
        
        <ab>      
            <milestone n="A3" unit="face" type="pagelike"/>
            <lb n="5"/>jñāna-sāgaraḥ
        </ab>
        <ab>
            <lb n="6"/>tri-bhuvana-dīpa<unclear>ḥ</unclear>
        </ab>
        
        <ab>      
            <milestone n="A4" unit="face" type="pagelike"/>
            <lb n="7"/>Avirata-dānaḥ
        </ab>
        <ab>
            <lb n="8"/>Īśāna-śara<unclear>ṇaḥ</unclear>
        </ab>
    </div>
    
    <div type="textpart" n="B">
    <head xml:lang="eng">2nd pillar</head>
        
        <ab>      
            <milestone n="B1" unit="face" type="pagelike"/>
            <lb n="9"/>pṛthivī-sāraḥ
        </ab>
        <ab>
            <lb n="10"/>samara-dhanañjaya<unclear>ḥ</unclear>
        </ab>
        
        <ab>      
            <milestone n="B2" unit="face" type="pagelike"/>
            <lb n="11"/>Atyanta-kāma<unclear>ḥ</unclear>
        </ab>
        <ab>
            <lb n="12"/>Abhayaṃ-kara<unclear>ḥ</unclear>
        </ab>   
        
        <ab>      
            <milestone n="B3" unit="face" type="pagelike"/>
            <lb n="13"/>Avani-divākara<unclear>ḥ</unclear>
        </ab>
        <ab>
            <lb n="14"/>Atiraṇa-caṇḍa<unclear>ḥ</unclear>
        </ab>
        
        <ab>      
            <milestone n="B4" unit="face" type="pagelike"/>
            <lb n="15"/>Avārita-vīryya<unclear>ḥ</unclear>
        </ab>
        <ab>
            <lb n="16"/>Ari-kari-kesar<choice><unclear>ī</unclear><unclear>ī</unclear></choice>
        </ab>
    </div>
   
</div>         
        
