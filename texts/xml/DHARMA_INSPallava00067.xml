<div type="edition" xml:lang="san-Latn" rendition="class:grantha maturity:83215">         	
   
   <!--check order of faces: maybe start with alpahabetical order of the birudas-->
   <div type="textpart" n="A1">
      <head xml:lang="eng">1st pillar, face 1</head>
      <ab>      
         <lb n="1"/>kāma-laḷita<unclear>ḥ</unclear>
      </ab>
      <ab> 
         <lb n="2"/>kula-tilaka<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="A2">
      <head xml:lang="eng">1st pillar, face 2</head>
      <ab>      
         <lb n="1"/>guṇa-vinīta<unclear>ḥ</unclear>
      </ab>
      <ab> 
         <lb n="2"/>dharaṇi-tilaka<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="A3">
      <head xml:lang="eng">1st pillar, face 3</head>
      <ab>      
         <lb n="1"/>jñāna-sāgaraḥ
      </ab>
      <ab> 
         <lb n="2"/>tri-bhuvana-dīpa<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="A4">
      <head xml:lang="eng">1st pillar, face 4</head><ab>      
         <lb n="1"/>Avirata-dānaḥ 
      </ab>
      <ab> 
         <lb n="2"/>Īśāna-śara<unclear>ṇaḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="B1">
      <head xml:lang="eng">2nd pillar, face 1</head><ab>      
         <lb n="1"/>pṛthivī-sāraḥ
      </ab>
      <ab> 
         <lb n="2"/>samara-dhanañjaya<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="B2">
      <head xml:lang="eng">2nd pillar, face 2</head>
      <ab>      
         <lb n="1"/>Atyanta-kāma<unclear>ḥ</unclear>
      </ab>
      <ab> 
         <lb n="2"/>Abhayaṃ-kara<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="B3">
      <head xml:lang="eng">2nd pillar, face 3</head><ab>      
         <lb n="1"/>Avani-divākara<unclear>ḥ</unclear>
      </ab>
      <ab> 
         <lb n="2"/>Atiraṇa-caṇḍa<unclear>ḥ</unclear>
      </ab>
   </div>
   
   <div type="textpart" n="B4">
      <head xml:lang="eng">2nd pillar, face 4</head>
      <ab>      
         <lb n="1"/>Avārita-vīryya<unclear>ḥ</unclear>
      </ab>
      <ab> 
         <lb n="2"/>Ari-kari-kesar<choice><unclear>ī</unclear><unclear>ī</unclear></choice>
      </ab>
   </div>
   
</div>         
        
